version: '3'
services:
    db:
        image: mariadb:10.2
        environment:
            - MYSQL_ROOT_PASSWORD=root
        ports:
            - "3306:3306"
        volumes:
            - "mariadb:/var/lib/mysql"
            - "./config/mysql:/etc/mysql/conf.d"
    redis:
        image: redis:3.2-alpine
        volumes:
            - "redis:/data"
    web:
        build: .
        depends_on:
            - db
            - redis
        environment:
            - DEV_UID=1000
            - NGINX_UID=127
            - NGINX_GID=1000
            - SMTP_SERVER=smtp.mailgun.org
            - SMTP_FROM=
            - SMTP_USER=
            - SMTP_PASSWORD=
        extra_hosts:
            - "host-container:172.17.0.1"
        links:
            - db:db.store.local
            - redis:redis.store.local
        ports:
            - "80:80"
        volumes:
            - "./magento:/var/www/html"
            - "./magento/nginx.conf:/etc/nginx/magento.conf"
            - "./config/certificates:/usr/local/share/ca-certificates"
            - "./config/nginx/default.conf:/etc/nginx/sites-available/default.conf"
volumes:
    mariadb:
    redis:
